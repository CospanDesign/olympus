{
	
	"BASE_DIR":"~/projects/sycamore_projects",
	"PROJECT_NAME":"example_project",
	"BUILD_TOOL":"xilinx",
	"TEMPLATE":"wishbone_template.json",
	"INTERFACE":{
		"filename":"uart_io_handler.v"
	},
	"SLAVES":{
		"gpio1":{
			"filename":"wb_gpio.v"
		}
	},

	"MEMORY":{
		"mem1":{
			"filename":"wb_bram.v"
		}
	},

	"CONSTRAINTS":{
		"constraint_files":[
			"sycamore_serial.ucf"
		],
		"board":"xilinx-s3esk",
		"device":"xc3s500efg320",
		"bind": {
			"phy_uart_in":{
				"port":"RX",
				"direction":"input"
			},
			"phy_uart_out":{
				"port":"TX",
				"direction":"output"
			},
			"gpio1_gpio_out[7:0]":{
				"port":"led[7:0]",
				"direction":"output"
			},
			"gpio1_gpio_in[3:0]":{
				"port":"switch[3:0]",
				"direction":"input"
			},
			"gpio1_gpio_in[4]":{
				"port":"btn_north",
				"direction":"input"
			},
			"gpio1_gpio_in[5]":{
				"port":"btn_south",
				"direction":"input"
			},
			"gpio1_gpio_in[6]":{
				"port":"btn_east",
				"direction":"input"
			},
			"gpio1_gpio_in[7]":{
				"port":"btn_west",
				"direction":"input"
			}
		}
	}
}
